@model Alternative.Web.ViewModels.TeacherViewModel

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>TeacherViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LinkKhNure" class="control-label"></label>
                <input asp-for="LinkKhNure" class="form-control" />
                <span asp-validation-for="LinkKhNure" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                @Html.DisplayName("Select User")
                @Html.DropDownListFor(x => x.SelectedUser, Model.Users, "", new { @class = "form-control", multiple = "false" })
                <span asp-validation-for="Users" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.Display("Load Image")
                <input asp-for="Photo" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
