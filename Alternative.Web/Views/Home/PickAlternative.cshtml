@{
    ViewData["Title"] = "Pick Alternative";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Alternative</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/signin.css">

</head>
<body>
    <section>
        <h3>ВЫБОР АЛЬТЕРНАТИВ</h3>
    </section>
    <content>
        <div class="alternativeBlock">
            <form method="" name="">
                <div class="alternative">
                    <input type="number" name="" max="5" min="0" class="priority" value="0">
                    <p class="name">APZ</p>
                    <a class="description" asp-action="Description">Description</a>
                    <a class="teacher" href="">Teacher</a>
                </div>
                <button name="" class="saveAlternBtn">Сохранить</button>
            </form>

        </div>
    </content>
</body>
</html>